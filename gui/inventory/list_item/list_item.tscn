resource_name = "item_list_script"
script/source = "extends Control

onready var item_icon_node = get_node(\"VBoxContainer/HBoxContainer/item_icon\")
onready var item_name_node = get_node(\"VBoxContainer/HBoxContainer/item_name\")

var clicked = false

var inventory_menu
var current_item_file

func setup(item_icon, item_name, item_file, menu):
	item_icon_node.texture = item_icon
	item_name_node.text = item_name
	current_item_file = item_file
	inventory_menu = menu


func mouse_on_click(event):
	if event is InputEventMouseButton and !clicked:
		clicked = true
		if inventory_menu:
			inventory_menu.update_item_status(current_item_file)
"

